@model ProjetoNADD.Models.Area

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Área</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Area" />
            <div class="form-group">
                <label asp-for="Nome_Area" class="control-label"></label>
                <input asp-for="Nome_Area" class="form-control" />
                <span asp-validation-for="Nome_Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Áreas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
