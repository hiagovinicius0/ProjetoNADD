@model ProjetoNADD.Models.Disciplina


<div id="cabecalho">
    <h5>Inserir Disciplina</h5>
</div>
<div id="conteudo_create">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Disciplina" class="control-label"></label>
                <input asp-for="Nome_Disciplina" class="form-control" id="Nome_Disciplinacad" />
                <span asp-validation-for="Nome_Disciplina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo_Disciplina" class="control-label"></label>
                <input asp-for="Periodo_Disciplina" class="form-control" id="Periodo_Disciplinacad" />
                <span asp-validation-for="Periodo_Disciplina" class="text-danger"></span>
            </div>
            <label asp-for="Ano_Disciplina" class="control-label"></label>
            <div class="row">
                <div class="col-md-1">
                    <button type="button" class="btn btn-success" onclick="BuscarAnos()">+</button>
                </div>
                <div class="col-md-11">
                    <select asp-for="Ano_Disciplina" class="form-control">

                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CursoId" class="control-label"></label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId" id="CursoIdcad"></select>
            </div>
            <div class="form-group">
                <label for="Professor_id" class="control-label">Professor</label>
                <select name="Professor_id" class="form-control" id="Professor_id" asp-items="ViewBag.ProfessoresId" multiple="multiple"></select>
            </div>
            <br />
        </div>
    </div>
</div>

