@model ProjetoNADD.Models.Disciplina

<div id="cabecalho">

    <h5>Editar Disciplina</h5>
</div>
<div id="conteudo_create">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id_Disciplina" id="Id_Disciplina" />
                <div class="form-group">
                    <label asp-for="Nome_Disciplina" class="control-label"></label>
                    <input asp-for="Nome_Disciplina" class="form-control" />
                    <span asp-validation-for="Nome_Disciplina" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Periodo_Disciplina" class="control-label"></label>
                    <input asp-for="Periodo_Disciplina" class="form-control" />
                    <span asp-validation-for="Periodo_Disciplina" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ano_Disciplina" class="control-label"></label>
                    <input asp-for="Ano_Disciplina" class="form-control" />
                    <span asp-validation-for="Ano_Disciplina" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CursoId" class="control-label"></label>
                    <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
                    <span asp-validation-for="CursoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Professor_id" class="control-label">Professor</label>
                    <select name="Professor_id" class="form-control" id="Professor_id" asp-items="ViewBag.ProfessoresId" multiple="multiple"></select>
                    <input type="hidden" id="marcados" value="ViewBag.ProfessoresMarcados" />
                </div>
            </form>
        </div>
    </div>
</div>
