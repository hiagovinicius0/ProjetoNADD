@model ProjetoNADD.Models.Curso
<div id="cabecalho">

    <h5>Editar Área</h5>
</div>
<div id="conteudo_create">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id_Curso" id="Id_Curso"/>
                <div class="form-group">
                    <label asp-for="Nome_Curso" class="control-label"></label>
                    <input asp-for="Nome_Curso" class="form-control" />
                    <span asp-validation-for="Nome_Curso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AreaId" class="control-label"></label>
                    <select asp-for="AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
                    <span asp-validation-for="AreaId" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>
