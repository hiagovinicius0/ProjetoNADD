@model ProjetoNADD.Models.Questao

@{
    ViewData["Title"] = "Inserir Questão";
}

<h2>Inserir</h2>

<h4>Questão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Numero" class="control-label"></label>
                <input asp-for="Id_Numero" class="form-control" />
                <span asp-validation-for="Id_Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Avaliacao" class="control-label"></label>
                <select asp-for="Id_Avaliacao" class ="form-control" asp-items="ViewBag.Id_Avaliacao"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Contextualizacao_Questao" /> @Html.DisplayNameFor(model => model.Contextualizacao_Questao)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Clareza_Questao" /> @Html.DisplayNameFor(model => model.Clareza_Questao)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Complexidade_Questao" /> @Html.DisplayNameFor(model => model.Complexidade_Questao)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes_Questao" class="control-label"></label>
                <input asp-for="Observacoes_Questao" class="form-control" />
                <span asp-validation-for="Observacoes_Questao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Questões</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
